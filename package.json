{
  "name": "@abelspithost/commitlint",
  "version": "0.0.1",
  "description": "Shared commitlint preset extending @commitlint/config-conventional with stricter defaults",
  "keywords": [
    "commitlint",
    "commitlint-config",
    "conventional",
    "commits",
    "conventional-commits",
    "husky",
    "git-hooks"
  ],
  "homepage": "https://github.com/aspithost/commitlint#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/aspithost/commitlint.git"
  },
  "license": "ISC",
  "author": {
    "name": "Abel Spithost",
    "url": "https://github.com/aspithost"
  },
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "init": "./bin/cli.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "test:unit": "vitest",
    "test:cov": "vitest run --coverage --coverage.reporter=text",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^20.4.1",
    "@commitlint/format": "^20.4.0",
    "@commitlint/types": "^20.4.0",
    "commitlint": "^20.4.1"
  },
  "devDependencies": {
    "@abelspithost/eslint-config-ts": "^0.1.3",
    "@abelspithost/tsconfig-node": "^0.0.4",
    "@commitlint/cli": "^20.4.1",
    "@types/node": "^24.10.11",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
